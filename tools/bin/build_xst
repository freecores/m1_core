#ngdbuild ${TOP_LEVEL}
#map -o ${TOP_LEVEL}_map.ncd ${TOP_LEVEL}
#par -w -ol high ${TOP_LEVEL}_map.ncd ${TOP_LEVEL}.ncd
#bitgen -g startupclk:Cclk -w ${TOP_LEVEL} ${TOP_LEVEL}.bit
#trce ${TOP_LEVEL} ${TOP_LEVEL}_map




